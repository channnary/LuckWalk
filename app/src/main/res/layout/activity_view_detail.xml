<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ECF4FB"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:id="@+id/headerView"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/headerLayout"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/gobackicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:text="Menâ€™s Shoes"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="showCart"
                android:src="@drawable/cart02" />

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shoedetail"
            app:layout_constraintTop_toBottomOf="@id/headerLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rouned_top_corners"
        android:id="@+id/center"
        app:layout_constraintTop_toBottomOf="@id/headerView"
        >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BEST SELLER"
                android:paddingTop="20dp"
                android:textColor="@color/blue"
                android:layout_marginTop="10dp"
                android:textSize="50px"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nike Air Jordan"
                android:paddingTop="20dp"
                android:textColor="@color/black"
                android:textSize="80px"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$967.800"
                android:paddingTop="20dp"
                android:textColor="@color/black"
                android:textSize="50px"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="Air Jordan is an American brand of basketball shoes athletic, casual, and style clothing produced by Nike...."
                android:textColor="@color/customGray"
                android:layout_marginTop="10dp"
                android:textSize="50px"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gallery"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:paddingTop="15dp"
                android:textSize="70px"
                android:textStyle="bold"
                />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:paddingTop="15dp"
               >
               <androidx.cardview.widget.CardView
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   app:cardCornerRadius="10dp"
                   android:layout_gravity="center"
                   android:layout_marginEnd="10dp"
                   >
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="#F4F4F4"
                       android:src="@drawable/shoepre01" />
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   app:cardCornerRadius="10dp"
                   android:layout_gravity="center"
                   android:layout_marginEnd="10dp"
                   >
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="#F4F4F4"
                       android:src="@drawable/shoepre01" />
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   app:cardCornerRadius="10dp"
                   android:layout_gravity="center"
                   android:layout_marginEnd="10dp"
                   >
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="#F4F4F4"
                       android:src="@drawable/shoepre01" />
               </androidx.cardview.widget.CardView>
           </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingTop="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="6"
                    android:text="Size"
                    android:textColor="@color/black" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/black"
                        android:text="EU" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:text="US" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="UK" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginEnd="10dp"
                    >
                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="38"
                        android:gravity="center"
                        android:layout_gravity="center"
                    />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginEnd="10dp"
                    >
                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="39"
                        android:gravity="center"
                        android:layout_gravity="center"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginEnd="10dp"
                    >
                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="40"
                        android:gravity="center"
                        android:layout_gravity="center"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginEnd="10dp"
                    >
                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="41"
                        android:gravity="center"
                        android:layout_gravity="center"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginEnd="10dp"
                    >
                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="42"
                        android:gravity="center"
                        android:layout_gravity="center"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginEnd="10dp"
                    >
                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="43"
                        android:gravity="center"
                        android:layout_gravity="center"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>


    </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="413dp"
        android:layout_height="101dp"
        android:background="@drawable/rouned_top_corners"
        android:padding="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/center"
        tools:layout_editor_absoluteX="-2dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:padding="5dp"
                    android:text="Price" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:padding="5dp"
                    android:text="$849.69" />
            </LinearLayout>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#5B9FE3"
                android:padding="10dp"
                android:text="Add To Cart"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>